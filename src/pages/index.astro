      }

      .project-icon {
        font-size: 16px;
      }

      .project-title {
        color: #d0d0d0;
        font-size: 16px;
        font-weight: 600;
      }

      .project-description {
        color: #b8b8b8;
        font-size: 14px;
        margin-bottom: 12px;
        line-height: 1.5;
      }

      .project-tags {
        display: flex;
        gap: 6px;
        flex-wrap: wrap;
      }

      .project-tag {
        background: transparent;
        color: #a89984;
        padding: 2px 6px;
        border-radius: 3px;
        font-size: 11px;
        border: 1px solid #a89984;
      }

      .footer-section {
        margin-top: 40px;
        padding-top: 20px;
        border-top: 1px solid #333333;
        color: #787878;
        font-size: 12px;
        text-align: center;
      }

      @media (max-width: 768px) {
        .github-header {
          margin: 10px;
          padding: 12px 16px;
        }

        .terminal {
          margin: 10px;
        }

        .terminal-body {
          padding: 16px;
        }

        h1 {
          font-size: 24px;
        }

        .projects-grid,
        .posts-grid {
          grid-template-columns: 1fr;
        }

        .stats-section {
          grid-template-columns: repeat(2, 1fr);
        }
      }
    </style>
  </head>
